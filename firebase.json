{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/node_modules/**",
	  ".travis.yml",
	  "LICENSE",
	  ".gitignore",
	  "README.md",
	  "webpack.config.js",
	  "**/tests/**",
	  "**/.idea/**"
    ],
    "rewrites": [
      {
        "source": "**/*",
        "destination": "/index.html"
      }
    ]
  }
}
